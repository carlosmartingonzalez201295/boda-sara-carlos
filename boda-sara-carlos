    <script>
        console.log('=== SCRIPT INICIADO ===');

        // Countdown
        const weddingDate = new Date('2026-10-03T18:00:00').getTime();
        
        function updateCountdown() {
            const now = new Date().getTime();
            const distance = weddingDate - now;
            
            const days = Math.floor(distance / (1000 * 60 * 60 * 24));
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);
            
            // Actualizar countdown en el hero
            document.getElementById('days-hero').textContent = days;
            document.getElementById('hours-hero').textContent = hours;
            document.getElementById('minutes-hero').textContent = minutes;
            document.getElementById('seconds-hero').textContent = seconds;
        }
        
        updateCountdown();
        setInterval(updateCountdown, 1000);

        // Navbar show/hide
        window.addEventListener('scroll', () => {
            const navbar = document.getElementById('navbar');
            if (window.scrollY > window.innerHeight - 100) {
                navbar.classList.add('visible');
            } else {
                navbar.classList.remove('visible');
            }
        });

        // Smooth scroll
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });

        // Toggle acompa√±ante field
        function toggleAcompanante() {
            const select = document.getElementById('acompanado');
            const field = document.getElementById('acompananteField');
            const input = document.getElementById('nombreAcompanante');
            
            if (select.value === 'S√≠') {
                field.style.display = 'block';
                input.required = true;
            } else {
                field.style.display = 'none';
                input.required = false;
                input.value = '';
                document.getElementById('error-nombreAcompanante').textContent = '';
            }
        }

        // Form submission
        const SCRIPT_URL = 'https://script.google.com/macros/s/AKfycbz92-E270qmp06frweKBq0OQKK5uklWp0x3WTQSCZXPIpkACAoF4YJaikkbq62USMXWXg/exec';

        document.getElementById('rsvpForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            // Limpiar mensajes de error
            document.querySelectorAll('.error-message').forEach(el => el.textContent = '');
            document.getElementById('formMessage').style.display = 'none';
            
            // Validar campos obligatorios
            let hasErrors = false;
            const requiredFields = ['nombre', 'email', 'asisteBoda', 'acompanado', 'preboda', 'autobus'];
            
            requiredFields.forEach(fieldId => {
                const field = document.getElementById(fieldId);
                if (!field.value.trim()) {
                    document.getElementById('error-' + fieldId).textContent = 'Informaci√≥n necesaria';
                    hasErrors = true;
                }
            });
            
            // Validar acompa√±ante si viene acompa√±ado
            if (document.getElementById('acompanado').value === 'S√≠') {
                const nombreAcompanante = document.getElementById('nombreAcompanante');
                if (!nombreAcompanante.value.trim()) {
                    document.getElementById('error-nombreAcompanante').textContent = 'Informaci√≥n necesaria';
                    hasErrors = true;
                }
            }
            
            if (hasErrors) {
                return;
            }
            
            // Preparar datos
            const formData = {
                nombre: document.getElementById('nombre').value,
                email: document.getElementById('email').value,
                asisteBoda: document.getElementById('asisteBoda').value,
                acompanado: document.getElementById('acompanado').value,
                nombreAcompanante: document.getElementById('nombreAcompanante').value || '',
                preboda: document.getElementById('preboda').value,
                autobus: document.getElementById('autobus').value,
                restricciones: document.getElementById('restricciones').value || '',
                numeroPie: document.getElementById('numeroPie').value || ''
            };
            
            // Deshabilitar bot√≥n
            const submitBtn = document.getElementById('submitBtn');
            submitBtn.disabled = true;
            submitBtn.textContent = 'Enviando...';
            
            try {
                const response = await fetch(SCRIPT_URL, {
                    method: 'POST',
                    mode: 'no-cors',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData)
                });
                
                // Con no-cors no podemos leer la respuesta, asumimos √©xito
                const messageDiv = document.getElementById('formMessage');
                messageDiv.className = 'success';
                messageDiv.textContent = '¬°Confirmaci√≥n enviada correctamente! Gracias por confirmar tu asistencia.';
                messageDiv.style.display = 'block';
                
                // Limpiar formulario
                document.getElementById('rsvpForm').reset();
                toggleAcompanante();
                
                // Scroll al mensaje
                messageDiv.scrollIntoView({ behavior: 'smooth', block: 'center' });
                
            } catch (error) {
                const messageDiv = document.getElementById('formMessage');
                messageDiv.className = 'error';
                messageDiv.textContent = 'Hubo un error al enviar el formulario. Por favor, int√©ntalo de nuevo.';
                messageDiv.style.display = 'block';
            } finally {
                submitBtn.disabled = false;
                submitBtn.textContent = 'Confirmar Asistencia';
            }
        });

        // Golf Form submission
        const GOLF_SCRIPT_URL = 'https://script.google.com/macros/s/AKfycbz92-E270qmp06frweKBq0OQKK5uklWp0x3WTQSCZXPIpkACAoF4YJaikkbq62USMXWXg/exec';

        document.getElementById('golfForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            // Limpiar mensajes de error
            document.querySelectorAll('#modal-golf .error-message').forEach(el => el.textContent = '');
            document.getElementById('golfFormMessage').style.display = 'none';
            
            // Validar campos obligatorios
            let hasErrors = false;
            const golfFields = ['golf-nombre', 'golf-licencia', 'golf-handicap', 'golf-palos'];
            
            golfFields.forEach(fieldId => {
                const field = document.getElementById(fieldId);
                if (!field.value.trim()) {
                    document.getElementById('error-' + fieldId).textContent = 'Informaci√≥n necesaria';
                    hasErrors = true;
                }
            });
            
            if (hasErrors) {
                return;
            }
            
            // Preparar datos para el golf
            const golfData = {
                tipo: 'golf',
                nombre: document.getElementById('golf-nombre').value,
                licencia: document.getElementById('golf-licencia').value,
                handicap: document.getElementById('golf-handicap').value,
                palos: document.getElementById('golf-palos').value
            };
            
            // Deshabilitar bot√≥n
            const submitBtn = document.getElementById('submitGolfBtn');
            submitBtn.disabled = true;
            submitBtn.textContent = 'Enviando...';
            
            try {
                await fetch(GOLF_SCRIPT_URL, {
                    method: 'POST',
                    mode: 'no-cors',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(golfData)
                });
                
                const messageDiv = document.getElementById('golfFormMessage');
                messageDiv.className = 'success';
                messageDiv.style.background = '#d4edda';
                messageDiv.style.color = '#155724';
                messageDiv.style.border = '1px solid #c3e6cb';
                messageDiv.textContent = '¬°Inscripci√≥n al torneo enviada correctamente! Nos vemos en el campo.';
                messageDiv.style.display = 'block';
                
                // Limpiar formulario
                document.getElementById('golfForm').reset();
                
            } catch (error) {
                const messageDiv = document.getElementById('golfFormMessage');
                messageDiv.className = 'error';
                messageDiv.style.background = '#f8d7da';
                messageDiv.style.color = '#721c24';
                messageDiv.style.border = '1px solid #f5c6cb';
                messageDiv.textContent = 'Hubo un error al enviar la inscripci√≥n. Por favor, int√©ntalo de nuevo.';
                messageDiv.style.display = 'block';
            } finally {
                submitBtn.disabled = false;
                submitBtn.textContent = 'Confirmar Inscripci√≥n';
            }
        });

        // Modal functions
        function openModal(id) {
            console.log('Abriendo modal:', id);
            const modal = document.getElementById('modal-' + id);
            if (modal) {
                modal.style.display = 'block';
                document.body.style.overflow = 'hidden';
            }
        }

        function closeModal(id) {
            console.log('Cerrando modal:', id);
            const modal = document.getElementById('modal-' + id);
            if (modal) {
                modal.style.display = 'none';
                document.body.style.overflow = 'auto';
            }
        }

        // Close modal when clicking outside
        window.addEventListener('click', function(event) {
            if (event.target.classList.contains('modal')) {
                event.target.style.display = 'none';
                document.body.style.overflow = 'auto';
            }
        });

        // Add click listeners to accommodation cards
        console.log('Buscando tarjetas clickables...');
        const cards = document.querySelectorAll('.card.clickable');
        console.log('Tarjetas encontradas:', cards.length);

        cards.forEach((card, index) => {
            console.log('A√±adiendo listener a tarjeta', index, card.getAttribute('data-modal'));
            card.addEventListener('click', function() {
                const modalId = this.getAttribute('data-modal');
                console.log('Click en tarjeta, abriendo modal:', modalId);
                openModal(modalId);
            });
        });

        console.log('=== SCRIPT COMPLETADO ===');
    </script>
</body>
